#!/usr/bin/env bash
# Set Container ID and PORT
CONTAINER_ID="f6e131e6a11b"
CONTAINER_PORT="8080"

# Start the container
docker start $CONTAINER_ID

# Execute a command in the running container to start Apache
docker exec -d $CONTAINER_ID service apache2 start

# Verify if Apache is running
docker exec $CONTAINER_ID service apache2 status

# Display the container's mapped port
docker port $CONTAINER_ID

# Query the root of the Apache server and return the response
curl -s "http://localhost:$CONTAINER_PORT/"

# Access the web page
#echo "Access the web page at http://localhost:$CONTAINER_PORT"
