#!/bin/bash
# Redirect to another page: 301 Moved Permanently
# Update package repositories
apt-get update

# Install Nginx if it doesn't exist
apt-get install -y nginx

echo "Hello World!" > /var/www/html/index.html

# Configure Nginx for redirection
echo "server {
    listen 80;
    location /redirect_me {
        return 301 https://fmovies.to/tv/superman-lois-178zv/1-1 permanent;
    }
}" > /etc/nginx/sites-available/default

sed -i '23i\\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}\n' /etc/nginx/sites-available/default

# Enable the redirection site
ln -s /etc/nginx/sites-available/redirect_me /etc/nginx/sites-enabled/

# Remove the default site symlink
rm /etc/nginx/sites-enabled/default

# Restart Nginx
service nginx restart
