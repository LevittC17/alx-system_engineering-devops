#!/usr/bin/env bash
# Configure your Nginx server so that /redirect_me is redirecting to another page.
# The redirection is configured as a "301 Moved Permanently"

apt-get update
apt-get install -y nginx

echo "Hello World!" > /var/www/html/index.html

nginx_conf="/etc/nginx/sites-available/default"
new_url="https://fmovies.to/tv/the-blacklist-j2yy2/10-20"

# Define the location block and the new redirect URL
location_block="location \/redirect_me \{"
new_redirect_url="return 301 new_url;"
new_redirect_url="${new_redirect_url//\/\\\/}"

sed -i "s|$location_block.*|$location_block\n    $new_redirect_url|g" $nginx_conf

service nginx restart

# Display a success message
echo "Nginx redirect successfully updated to $new_redirect_url"
