#!/bin/bash
# Redirect to another page: 301 Moved Permanently
# Update package repositories
apt-get update

# Install Nginx if it doesn't exist
apt-get install -y nginx

# echo "Hello World!" > /var/www/html/index.html

# Configure Nginx for redirection
echo "server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    server_name _;
    location / {
 redirect ^/testone(.*) https://www.google.com permanent;
 redirect ^/testtwo(.*) http://www.google.com;
         try_files $uri $uri/ =404;
    }
}" > /etc/nginx/sites-available/default

# Enable the redirection site
ln -s /etc/nginx/sites-available/redirect /etc/nginx/sites-enabled/

# Remove the default site symlink
rm /etc/nginx/sites-enabled/default

# Restart Nginx
service nginx restart
